@model IEnumerable<AlgrmsWeb.Models.Issuer>

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<section class="content-header content-center">
    <h1>
        Issuers List
        @{

            <span class="new-button"><a href="#" class="btn btn-primary btn-sm"><span class="fa fa-plus"></span> &nbsp;Add New</a></span>
            <span><a href="#" class="btn btn-primary btn-sm"><span class="fa fa-download"></span> &nbsp;Import</a></span>
        }
    </h1>
</section>
<section class="content content-center">
    <div class="box box-primary">
        <div class="box-body">
            <div class="table table-responsive">
                <table class="table table-striped table-hover" id="tbl-items">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.issuer_code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.issuer_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.issuer_contact_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.issuer_conatct_phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.issuer_email)
                        </th>



                        <th>
                            @Html.DisplayNameFor(model => model.created_at)
                        </th>

                        <th>Action</th>
                    </tr>

                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.issuer_code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.issuer_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.issuer_contact_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.issuer_conatct_phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.issuer_email)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.created_at)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
        <div class="box-footer">

        </div>
    </div>
   
</section>
